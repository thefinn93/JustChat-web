<?xml version="1.0" encoding="UTF-8"?>
<project name="Project Builder">
    <description>Builds the project.</description>
	<mkdir dir="./build/classes/"/>
	<mkdir dir="./dist/"/>
	<get dest="./build/json-simple-1.1.1.jar" usetimestamp="true">
		<url url="http://json-simple.googlecode.com/files/json-simple-1.1.1.jar"/>
	</get>
	<javac srcdir="./src/javaserver/"
		destdir="./build/classes/"
		>
		<classpath>
			<fileset dir="./build/">
				<include name= "json-simple-1.1.1.jar"/>
			</fileset>
		</classpath>
	</javac>
	<jar destfile="./dist/JustChatServer.jar" basedir="./build/classes">
        	<zipfileset src="./build/json-simple-1.1.1.jar" excludes="META-INF/*" />
		<manifest>
			<attribute name="Class-Path" value="./build/json-simple-1.1.1.jar"/>
            		<attribute name="Main-Class" value="javaserver.JavaServer"/>
		</manifest>
	</jar>
</project>

